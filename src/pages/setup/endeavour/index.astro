---
// src/pages/setup/mac/index.astro
import Copybox from "../components/Copybox.svelte";
// Define props
const OS = "EndeavourOS (Linux)"
const titleInstall = `${OS} Setup Instructions`;
const subtitleInstall = `Run the following command to set up your ${OS}:`;
const commandInstall = `/bin/bash -c "$(curl -fsSL https://rodeon33.com/setup/linux/endeavour/install.sh"`;

const titleMobile = `Flutter Setup Instructions`;
const subtitleMobile = `Run the following command to set up your ${OS} with Flutter:`;
const commandMobile = `/bin/bash -c "$(curl -fsSL https://rodeon33.com/setup/linux/endeavour/mobile.sh"`;

---

<html>
  <head>
    <title>{titleInstall}</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body class="bg-gray-100 p-8 mt-48 h-svh w-svw flex justify-center items-start">
    <!-- Pass all props to the Copybox component -->
    <Copybox {titleInstall} {subtitleInstall} {commandInstall} client:load/>
    <Copybox {titleMobile} {subtitleMobile} {commandMobile} client:load/>
  </body>
</html>
